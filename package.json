{
  "name": "ckb-wallet-demo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build": "tsc",
    "clean": "rm -rf build",
    "fmt": "prettier --write \"{src,tests}/**/*.ts\" package.json .eslintrc.js",
    "lint": "eslint -c .eslintrc.js \"{src,tests}/**/*.ts\"",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon ./bin/www",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "ava tests/**/*.test.ts",
    "knex:migrate:make": "knex --knexfile src/db/knexfile.ts migrate:make",
    "knex:migrate:latest": "knex --knexfile src/db/knexfile.ts migrate:latest",
    "knex:migrate:rollback": "knex --knexfile src/db/knexfile.ts migrate:rollback"
  },
  "dependencies": {
    "@ckb-lumos/base": "^0.12.0",
    "@ckb-lumos/common-scripts": "^0.12.0",
    "@ckb-lumos/config-manager": "^0.12.0",
    "@ckb-lumos/helpers": "^0.12.0",
    "@ckb-lumos/indexer": "^0.12.0",
    "@nervosnetwork/ckb-sdk-utils": "^0.34.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "ckb-js-toolkit": "^0.9.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-jwt": "^6.0.0",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "json2csv": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.3",
    "morgan": "~1.9.1",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/elliptic": "^6.4.12",
    "@types/express": "^4.17.7",
    "@types/express-jwt": "^0.0.42",
    "@types/http-errors": "^1.8.0",
    "@types/json2csv": "^5.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "ava": "^3.11.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.6.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
